<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="examen.MainPage"
             Title="Página principal"
             BackgroundColor="LightBlue">

    <ScrollView>
        <Grid RowSpacing="10" ColumnSpacing="10" Padding="10" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <!--Boton para las mascotas-->
            <Button Text="MASCOTAS"
                    FontSize="Large" 
                    FontAttributes="Bold" 
                    Grid.Row="0" 
                    Clicked="NavigateToMascotas" 
                    Style="{StaticResource BotonCuqui}"/>

            <!--Boton para la factura-->
            <Button Text="FACTURA" 
                    FontAttributes="Bold" 
                    FontSize="Large" 
                    Grid.Row="1" 
                    Clicked="NavigateToFactura"
                    Style="{StaticResource BotonCuqui}"/>
        </Grid>
    </ScrollView>
</ContentPage>